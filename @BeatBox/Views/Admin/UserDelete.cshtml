@model IEnumerable<_BeatBox.Models.UserViewModel>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="Admin" asp-action="UserEdit" asp-route-id="@user.Id" class="btn btn-outline-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("UserDelete", "Admin", new { id = user.Id })"
                       onclick="return confirmDelete();"
                       class="btn btn-outline-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this user?');
    }
</script>
